@model OneTimeSecretClone.Models.ResponseDto
@{

}



<form asp-action="ViewMessage" method="post">
    <input type="hidden" name="secretId" value="@ViewData["SecretId"]" />

    <label for="password">Enter Password</label>
    <input type="text" name="password" />

    <button type="submit">View Secret</button>
</form>

@if (!string.IsNullOrEmpty(Model?.Data.ToString()))
{
    <textarea>@Model.Data</textarea>
}
else if (!string.IsNullOrEmpty(Model?.Message))
{
    <h2>@Model.Message</h2>
}
