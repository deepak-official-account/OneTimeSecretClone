@model OneTimeSecretClone.Models.ResponseDto

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">🔐 View Your Secret Message</h4>
                </div>
                <div class="card-body">

                    <form action="@Url.Action("ViewMessage", "Secret")" method="post">
                        <input type="hidden" name="secretId" value="@ViewData["SecretId"]" />

                        <div class="mb-3">
                            <label for="password" class="form-label">Enter Password</label>
                            <input type="password" name="password" id="password" class="form-control" placeholder="Enter your password..." required />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">🔍 View Secret</button>
                        </div>
                    </form>

                    <hr />

                    @if (Model?.Data != null)
                        {
                        <div class="alert alert-success mt-4">
                            <h5 class="alert-heading">🎉 Secret Message:</h5>
                            <textarea class="form-control" rows="5" readonly>@Model.Data</textarea>
                        </div>
                        }
                    else if (!string.IsNullOrEmpty(Model?.Message))
                        {
                        <div class="alert alert-warning mt-4">
                            <h5 class="alert-heading">⚠️ Notice:</h5>
                            <p>@Model.Message</p>
                        </div>
                        }

                </div>
            </div>
        </div>
    </div>
</div>
